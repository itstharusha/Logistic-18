# Database Configuration
MONGODB_URI=mongodb://localhost:27017/logistic18
DB_NAME=logistic18

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=5000

# Carrier API Keys (Sandbox for Development)
FEDEX_API_KEY=your-fedex-sandbox-key
UPS_API_KEY=your-ups-sandbox-key
DHL_API_KEY=your-dhl-sandbox-key

# File Storage (for PDF/CSV exports)
FILE_STORAGE_PATH=./uploads

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:5173

# Carrier Polling Interval (minutes)
CARRIER_POLLING_INTERVAL=15

# Alert SLA Configuration (hours)
ALERT_DEFAULT_SLA=24

# Alert Cooldown (minutes)
ALERT_COOLDOWN_MINUTES=30

# Risk Score Recalculation Interval (hours)
RISK_SCORE_RECALC_INTERVAL=4
